          username: ${{ secrets.ftp_user }}
          password: ${{ secrets.ftp_password }}
          local-dir: dist/
          server-dir: dev/
          dangerous-clean-slate: true
          exclude: |
            **/.git*
            **/.git*/**
            **/.idea*
            **/.idea*/**
            **/node_modules/**
